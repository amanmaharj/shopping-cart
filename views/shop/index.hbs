<div class="row justify-content-center" >
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <div id="success " class="alert alert-success test-center {{#if noMessage}}invisible{{/if}}">
          {{successMsg}}
      </div>

</div>
</div>

{{# each products }}

  <div class="row">
      {{# each this}}
    
       <div class="col-lg-4">
  <div class="card mx-auto" style="width: 18rem;">
  <img src= "{{this.imagePath}}" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{this.title}}</h5>
    <p class="card-text">{{this.description}}</p>
    
         
           
        <div class="text-center">
          <div class="text-left">${{this.price}}</div>
                <a href="/add-to-cart/{{this._id}}" class="btn btn-success">Add</a>
        </div>
        
    
  </div>
</div>
  </div>
    {{/each}}
 
  </div>
  
{{/each}}

