<div class="row justify-content-center">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h1>
            User Profile
        </h1>
        <hr>
        <h3>My Orders</h3>
        {{# each orders}}
        <div class="card">

            <div class="card-body">

                <ul class="list-group list-group-flush">
                    {{# each this.items}}
                         <li class="list-group-item">
                             {{this.item.title}}| {{this.qty}} Units
                             <span class="badge badge-secondary float-right m-2">{{this.price}}</span>
                            </li>
                            
                    {{/each}}
                   
                    
                </ul>

                <br>
                <footer>Total: $ {{this.cart.totalPrice}}</footer>

            </div>
        </div>
        {{/each}}


    </div>

</div>